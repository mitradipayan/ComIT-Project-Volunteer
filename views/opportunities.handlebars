		<section class="opportunities">
			<div class="container">
				<div>
					<h1>
						<span id="sp1">Explore</span>
						<i class="fas fa-angle-right"></i>
						<span id="sp2">Connect</span>
						<i class="fas fa-angle-right"></i>
						<span id="sp3">Serve</span>
					</h1>
				</div>
				<div id="summary">
					<h2>
						Find the topic you are most passionate about, somthing
						you would like to leave a mark in the sands of time,
						check an organization that is aligned with your goals
						and apply for the role
					</h2>
				</div>
			</div>
		</section>

		<!-- Opportunity list -->
		<section class="opplist">
			<div class="grid-container">
				<!-- Search bar section -->
				<div class="search">
					<div class="background">
						<p class="searchtitle">Causes that interest me</p>
						<div class="searchselect">
							<select
								name="causes"
								id="causes"
								title="Causes that interest me"
							>
								<option value="">Choose causes...</option>
								<option value="relief">
									Emergency Relief Work
								</option>
								<option value="caregiving">Caregiving</option>
								<option value="swachbharat">
									Swachh Bharat
								</option>
								<option value="animalcare">Animal Care</option>
								<option value="teaching">Teaching</option>
							</select>
							<span class="custom-arrow"
								><i class="fas fa-angle-down"></i
							></span>
						</div>
					</div>
					<div class="background">
						<p class="searchtitle">How can I help...</p>
						<div class="searchselect">
							<select
								name="causes"
								id="causes"
								title="How I can help"
							>
								<option value="">Choose activities...</option>
								<option value="relief" title="IT support">
									IT systems support
								</option>
								<option
									value="caregiving"
									title="Accounting and auditing"
								>
									Accounting
								</option>
								<option
									value="swachbharat"
									title="Legal advising, Human rights advocacy, Advocacy "
								>
									Legal
								</option>
								<option
									value="animalcare"
									title="Consultant, Advisor"
								>
									Organizational leadership
								</option>
								<option
									value="teaching"
									title="Data analysis, Evaluation, Measurement, Research, Presentation"
								>
									Research
								</option>
							</select>
							<span class="custom-arrow"
								><i class="fas fa-angle-down"></i
							></span>
						</div>
					</div>
					<div class="background">
						<p class="searchtitle">Time Commitment</p>
						<div class="option">
							<input
								type="checkbox"
								name="timecommitment"
								id="all"
								value="all"
							/>
							<label for="all" class="searchtitle">
								&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;All</label
							>
						</div>
						<div class="timecommitment">
							<div class="option">
								<input
									type="radio"
									id="onetime"
									name="timecommitment"
									value="onetime"
								/>
								<label for="onetime"
									>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;One time
									only</label
								>
							</div>

							<div class="option">
								<input
									type="radio"
									id="shortterm"
									name="timecommitment"
									value="shortterm"
								/>
								<label for="shortterm">
									&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Short term ( <
									3 months )</label
								>
							</div>

							<div class="option">
								<input
									type="radio"
									id="longterm"
									name="timecommitment"
									value="longterm"
								/>
								<label for="longterm">
									&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Long term ( >
									6 months )</label
								>
							</div>
						</div>
					</div>
					<div class="background">
						<p class="searchtitle">Location Preferences</p>
						<div class="option">
							<div class="searchselect">
								<select
									name="locpref"
									id="locpref"
									title="Location Preference - State"
								>
									<option value="">Preferred State</option>
									<option value="KA" title="Karnataka">
										Karnataka
									</option>
									<option value="MH" title="Maharashtra">
										Maharashtra
									</option>
								</select>
								<span class="custom-arrow"
									><i class="fas fa-angle-down"></i
								></span>
							</div>
						</div>
						<div class="option">
							<div class="searchselect">
								<select
									name="locpref"
									id="locpref"
									title="Location Preference - City"
								>
									<option value="">Preferred City</option>
									<option value="BLR" title="Bangalore">
										Bangalore
									</option>
									<option value="MUM" title="Mumbai">
										Mumbai
									</option>
								</select>
								<span class="custom-arrow"
									><i class="fas fa-angle-down"></i
								></span>
							</div>
						</div>
					</div>
					<!-- <div class="background"></div> -->
				</div>
				<!-- Opportunity cards section -->
				{{opplist}}
				<div class="opps">

					{{#each opportunity}}
					<div class="oppscard card">
						<div class="card-container">
							<div class="logo">
								<div class="logoimage">
									<img src={{orgLogoUrl}} alt="" />
								</div>
								<p>{{orgName}}</p>
							</div>
							<div class="logodesc">
								<div class="logotitle">
									<p>{{title}}</p>
								</div>
								<div class="activitydesc">
									<p>{{activityType}} - {{volunteerCause}} - {{timeCommitmentType}}</p>
								</div>
								<div class="oppdesc">
									<p>
										{{jobDescription}}
									</p>
								</div>
								<div class="vacancy">
									<label for="vacancy"
										>Number of volunteers required:</label
									>
									<span id="vacancy">{{volunteerRequired}}</span>
								</div>
								<div class="time-hours">
									<p>
										<i class="far fa-clock"></i>
										&nbsp;&nbsp;{{timecommitment}}
									</p>
								</div>
								<div class="time-duration">
									<p>
										<i class="far fa-calendar-alt"></i>
										&nbsp;&nbsp;{{timeDuration}}
									</p>
								</div>
								<div class="more">
									<p>
										<a href="#" target="_blank"
											>Details
											<i class="fas fa-angle-right"></i
										></a>
									</p>
								</div>
							</div>
						</div>
					</div>
					{{/each}}
				</div>
			</div>
		</section>
